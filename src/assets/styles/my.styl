@require './mixins.styl'

.user-index-wrap
  position absolute
  width 100%
  top 0
.user-index
  .transform-top-back
    width 100%
    height 476px
    top 0
    left 0
    position absolute
    background url(../images/user-top-back-3.png) top
    background-size 100%
    background-repeat no-repeat
    transform scale(1)
    transform-origin center
    animation all .4s ease-in-out
  .list
    li
      i
        width 52px
        height 52px
  .my-top-back
    position relative
    width 100%
    height 460px
    padding-top 1px
    // background linear-gradient(100deg, #3cabec, #634bf6)
    background-color var(--f7-theme-color)
    color #fff
    img.back-avatar
      position absolute
      top 0
      left 0
      z-index -1
      width 100%
      height 100%
      // filter: blur(5px)
      border-bottom-left-radius 18px
      border-bottom-right-radius 18px
    .info-block
      position absolute
      bottom -52px
      left 0
      right 0
      margin auto
      width 90%
      height 120px
      background #3c3c3c
      border-radius 14px
    .avatar
      display flex
      position relative
      margin 30px auto
      width 82%
      margin-top 160px
      img
        width 158px
        height 158px
        border-radius 50%
      .text-info
        margin-left 32px
        text-align left
        line-height 88px
        label.name
          font-size 42px
          font-weight 500
          line-height 100px
        span.summary
          display block
          line-height 0px
          font-size 30px
      span.right
        position absolute
        right 0
        top 42px
        padding-left 14px
        padding-right 14px
        background rgba(78, 94, 130, 0.7)
        border-radius 18px
        display flex
        i
          width 42px
          height 42px
          vertical-align middle
          display inline-block
        em
          font-style normal
          display inline-block
          line-height 46px
    .top-main-btns
      width 82%
      margin 0 auto
      margin-top 52px
      i
        width 42px
        height 42px
        margin-right 14px
      a
        color #222
  .my-service
    .main-btns
      ul
        margin 0
        padding 0
        li
          display inline-block
          // margin-left 20px
          min-width 140px
          margin-right 20px
          text-align center
          // margin-top 24px
          margin-bottom 24px
          i.icon
            width 58px
            height 58px
            margin 12px auto
            margin-bottom 12px
          label
            font-size 26px
            font-weight 400
            display block
          &:nth-child(4), &:nth-child(8)
            margin-right 0
  .my-order
    margin-top -100px
    .order-btns
      position relative
      .split
        height 100px
        width 2px
        border-left #f4f4f4 2px solid
        position absolute
        top 0
        bottom 0
        right 0
        left 0
        margin auto
      ul
        width 90%
        padding 0
        margin 0 auto
        li
          width 50%
          display inline-block
          margin 14px auto
          font-size 32px
          text-align center
          p
            margin 12px
          i.icon
            width 88px
            height 88px
            margin 0 auto
  .card-expandable 
    height 180px
    .card-content
      width 100%
      height 100%
    .card-header
      font-size 34px
  .invite-block
    display flex
    position relative
    background-image url(../images/welfare.jpg)
    width 100%
    height 180px
    background-size 100%
    .text
      display inline-block
      margin-left 52px
      p
        &:first-child
          margin-bottom 0
        &:last-child
          margin-top 0
      label
        font-size 30px
        color #000
        font-weight 500
      em
        font-style normal
        margin-left 12px
        color #ff6b22
        font-size 28px
      i
        width 40px
        height 40px
        float left
        margin-top 14px
        margin-left 14px
    img
      height 90px
      position absolute
      right 20px
      top 16px
.user-index.page
  background none